<div class="content">
  <div class="demanded-task-list">
    <%= render partial: 'wechat/tasks/demanded/tasks', locals: { tasks: @tasks } %>
  </div>
</div>
<%= footer_tag %>
<% content_for :javascript do %>
  <script>
    $(document).ready(function() {
      $('.demanded-task-list').jscroll({
        callback: function() {
          FastClick.attach(document.body);
          $("img.lazy").lazyload();
        }
      });
    });
  </script>
<% end %>