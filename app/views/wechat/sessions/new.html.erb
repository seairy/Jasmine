<div class="login-page bg1">
  <div class="login-page-overlay"></div>
  <div class="login-page-wrapper">
    <a href="#" class="login-logo"></a>
    <p>分享您的旅行箱，结交更多好朋友</p>
    <%= form_tag wechat_signin_path, method: :post do %>
      <%= text_field_tag :phone, nil, class: 'login-username', placeholder: '手机' %>
      <%= password_field_tag :password, nil, class: 'login-password', placeholder: '密码' %>
      <div class="one-half">
        <%= submit_tag '登录', class: 'button button-green' %>
      </div>
      <div class="one-half last-column">
        <a href="#" class="button button-blue">注册</a>
      </div>
    <% end %>
    <div class="clear"></div>
    <a class="forgot" href="#">忘记密码?</a>
  </div>
</div>